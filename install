#!/bin/bash

# Initialize flags
execute_prezdev=false
execute_2k=false
execute_notebook=false

# Iterate over all provided arguments
for arg in "$@"; do
    case "$arg" in
        "prezdev")
            execute_prezdev=true
            ;;
        "2k")
            execute_2k=true
            ;;
        "notebook")
            execute_notebook=true
            ;;
    esac
done

sudo -v
sudo pacman -Sy archlinux-keyring --noconfirm
sudo pacman-key --refresh-keys --noconfirm
sudo pacman -Syu --noconfirm

pause() {
    echo -e "\n\033[1;34mPresiona una tecla para continuar...\033[0m"
    read -n 1 -s
}

./yay/install; pause
./apps/minimal-install; pause

# if [ "$1" == "extra" ]; then
#     ./apps/extra-install; pause
# fi

./dunst/install; pause
./xinitrc/install; pause
./xfce4-terminal-config/install; pause
./polybar/install; pause
./i3/install; pause
./oh-my-fish/install; pause
./dark-theme/install; pause
./neofetch/install; pause
./neofetch/in-terminal/install; pause
./nitrogen/install; pause

if $execute_prezdev; then
    ./prezdev/apps/install; pause
    ./lock/install; pause
    ./picom/install; pause
    # ./search/install; pause
    ./apps/browser/install; pause
    ./redshift/install; pause
    ./prezdev/i3/install; pause
fi

if $execute_notebook; then
    ./notebook/battery/install; pause
    ./notebook/polybar/install; pause
else
    ./polybar/pc/install; pause
fi

if $execute_2k; then
    ./2k/install; pause
else
    ./not-2k/install; pause
fi

./systemctl/install; pause
./fusuma/install; pause

app_name="autoarch"
app_name_fmt="\033[1;32m${app_name}\033[0m"

echo -e "[${app_name_fmt}] Instalaci√≥n finalizada. Presiona Enter para reiniciar..."
read -r
sudo reboot
